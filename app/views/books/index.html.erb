<body>
<h1>Books</h1>
<table>
	<thead>
		<tr>
			<th width="150">Title</th>
			<th width="500">Body</th>
			<th colspan = "3"></th>
		</tr>
	</thead>
	<tbody>
	   <% @books.each do |book| %>
		<tr>
			<td><%= book.title %></td>
			<td><%= book.body %></td>
			<td><%= link_to "Show", book_path(book) %></td>
			<td><%= link_to "Edit", edit_book_path(book) %></td>
			<td><%= link_to "Destroy", book_path(book),method: :delete %></td>
		</tr>
		<% end %>
	</tbody>
</table>
<h3>New book</h3>
 <!-- エラー表示 -->
  <% if @book.errors.any? %>
    <% @book.errors.full_messages.each do |msg| %>
    <%= msg %>
    <% end %>
  <% end %>
	<!-- form_for -->
	<%= form_for(@book) do |f| %>
	 <h5>Title</h5>
	 <%= f.text_field :title %>
	 <h5>Body</h5>
	 <%= f.text_area :body %>
	 <br>
	 <br>
	 <%= f.submit 'Create Book' %>
	<% end %>

















</body>