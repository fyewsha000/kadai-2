<body>
<h1>Books</h1>
<table>
	<thead>
		<tr>
			<th width="150">Title</th>
			<th width="500">Body</th>
			<th colspan = "3"></th>
		</tr>
	</thead>
	<tbody>
	   <% @books.each do |book| %>
		<tr>
			<td><%= book.title %></td>
			<td><%= book.body %></td>
			<td><%= link_to "Show", book_path(book) %></td>
			<td><%= link_to "Edit", edit_book_path(book) %></td>
			<td><%= link_to "Destroy", book_path(book),method: :delete %></td>
		</tr>
		<% end %>
	</tbody>
</table>
<h3>New book</h3>
	<!-- form_for -->
<%= form_for(@book) do |f| %>
<!-- errors message -->
   <% if @book.errors.any? %>
  <div class="alert">
  	<div class="count">
  		<%= @book.errors.count %>errors prohibited this book from being saved:
  	</div>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

	 <h5>Title</h5>
	 <%= f.text_field :title %>
	 <h5>Body</h5>
	 <%= f.text_area :body %>
	 <br>
	 <br>
	 <%= f.submit 'Create Book' %>
<% end %>
     <!-- form_for end -->

















</body>