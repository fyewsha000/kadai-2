<body>
<h1>Books</h1>
<table>
	<thead>
		<tr>
			<th width="150">Title</th>
			<th width="500">Body</th>
			<th colspan = "3"></th>
		</tr>
	</thead>
	<tbody>
	   <% @books.each do |book| %>
		<tr>
			<td><%= book.title %></td>
			<td><%= book.body %></td>
			<td><%= link_to "Show", book_path(book.id) %></td>
			<td><%= link_to "Edit", edit_book_path(@book) %></td>
			<td><%= link_to "Destroy", destroy_book_path(book.id),method: :delete %></td>
		</tr>
		<% end %>
	</tbody>
</table>
<h3>New book</h3>
	<!-- form_for -->
	<%= form_for(@book) do |f| %>
	 <h5>Title</h5>
	 <%= f.text_field :title %>
	 <h5>Body</h5>
	 <%= f.text_area :body %>
	 <br>
	 <br>
	 <%= f.submit 'Create Book' %>
	<% end %>

















</body>